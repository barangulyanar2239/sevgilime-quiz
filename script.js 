const questions = [
    {
        question: "Sen aslÄ±nda nerelisin? (AramÄ±zdaki kÃ¼Ã§Ã¼k sÄ±r ğŸ˜Š)",
        options: ["Yozgat", "Ankara", "Bursa"],
        correctAnswerIndex: 0 
    },
    {
        question: "En sevdiÄŸim, en yakÄ±n arkadaÅŸÄ±m kimdir?",
        options: ["Ege", "Batu", "Burak"],
        correctAnswerIndex: 1 
    },
    {
        question: "Beni ne kadar seviyorsun? (DoÄŸru cevabÄ± bilmelisin! ğŸ˜‰)",
        options: ["Ã‡ok", "Ortalama", "Az"],
        correctAnswerIndex: 0 
    }
];

let currentQuestionIndex = 0;
const questionElement = document.getElementById('question');
const optionButtons = document.querySelectorAll('.options .btn');
const messageElement = document.getElementById('message');
const quizBox = document.getElementById('quiz-box');

function loadQuestion() {
    if (currentQuestionIndex >= questions.length) {
        showCompletionMessage();
        return;
    }

    const currentQ = questions[currentQuestionIndex];
    questionElement.textContent = currentQ.question;
    messageElement.textContent = ''; 

    optionButtons.forEach((button, index) => {
        button.textContent = currentQ.options[index];
        button.disabled = false; 
        button.style.backgroundColor = '#ffc107'; 
    });
}

function checkAnswer(selectedIndex) {
    const currentQ = questions[currentQuestionIndex];

    optionButtons.forEach(button => button.disabled = true);

    if (selectedIndex === currentQ.correctAnswerIndex) {
        messageElement.textContent = "ğŸ¥³ Harika! Bildin! Hadi bir sonrakine geÃ§elim.";
        messageElement.className = 'correct';
        optionButtons[selectedIndex].style.backgroundColor = 'lightgreen'; 

        setTimeout(() => {
            currentQuestionIndex++;
            loadQuestion();
        }, 2000);

    } else {
        messageElement.textContent = "ğŸ˜” ÃœzgÃ¼nÃ¼m, bu sefer bilemedin. Biraz daha dÃ¼ÅŸÃ¼n.";
        messageElement.className = 'incorrect';
        optionButtons[selectedIndex].style.backgroundColor = 'lightcoral'; 
        
        optionButtons[currentQ.correctAnswerIndex].style.backgroundColor = '#6495ED'; 

        setTimeout(() => {
            optionButtons.forEach(button => {
                button.disabled = false;
                button.style.backgroundColor = '#ffc107'; 
            });
            optionButtons[currentQ.correctAnswerIndex].style.backgroundColor = '#ffc107';
            messageElement.textContent = '';
        }, 3000);
    }
}

function showCompletionMessage() {
    quizBox.innerHTML = `
        <h2>Tebrikler CanÄ±m Sevgilim!</h2>
        <p style="font-size: 1.5em; color: #e91e63;">TÃ¼m 3 soruyu baÅŸarÄ±yla cevapladÄ±n. Bu, beni ne kadar iyi tanÄ±dÄ±ÄŸÄ±nÄ± gÃ¶steriyor!</p>
        <p>â¤ï¸ Seni Ã§ok seviyorum. â¤ï¸</p>
    `;
    quizBox.style.padding = '50px';
}

loadQuestion();